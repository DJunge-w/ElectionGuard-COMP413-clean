{
  "name": "ElectionGuard-TypeScript",
  "version": "0.5.0",
  "description": "Client-side implementation of ElectionGuard for ballot encryption",
  "author": "Arthur Wu <wuwenqin200613@gmail.com>",
  "repository": "https://github.com/danwallach/ElectionGuard-TypeScript",
  "license": "MIT",
  "keywords": [
    "typescript",
    "electionguard",
    "esbuild"
  ],
  "main": "./dist/tsc/index.js",
  "types": "./dist/tsc/main.d.ts",
  "browser": {
    "crypto": "crypto-browserify",
    "assert": "assert-browserify",
    "stream": "stream-browserify",
    "fs": "brfs",
    "path": "path-browserify"
  },
  "bin": {
    "my-cli-tool": "./dist/esbuild/cli.js"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "yarn clean && yarn build && yarn esbuild-node && yarn esbuild-browser",
    "esbuild-browser": "esbuild src/API/APIUtils.ts --bundle --sourcemap=external --outfile=dist/esbuild/out.js",
    "esbuild-browser:dev": "esbuild src/API/APIUtils.ts --bundle --outfile=dist/esbuild/out.js",
    "esbuild-browser:watch": "esbuild src/API/APIUtils.ts --bundle --watch --outfile=dist/esbuild/out.js",
    "esbuild-node": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:dev": "esbuild src/cli.ts --bundle --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:watch": "esbuild src/cli.ts --bundle --watch --sourcemap=external --outfile=dist/esbuild/cli.js"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "assert-browserify": "^2.0.0",
    "bigint-mod-arith": "^3.0.1",
    "brfs": "^2.0.2",
    "buffer": "^6.0.3",
    "class-transformer": "^0.4.0",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "fs": "^0.0.1-security",
    "moment": "^2.29.1",
    "path-browserify": "^1.0.1",
    "qrcode-generator-ts": "^0.0.4",
    "reflect-metadata": "^0.1.13",
    "sjcl-complete": "^1.0.0",
    "stream-browserify": "^3.0.0"
  }
}
