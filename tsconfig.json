{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "build",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "ES2020",
      "DOM"
    ],
  },
  "typedocOptions": {
    "entryPoints": [
      "src/electionguard/index.ts",
    ],
    "out": "docs"
  },
  "include": [
    "bench/*.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
//  "exclude": [
//    "node_modules",
//    "**/*.test.ts"
//  ]
}
